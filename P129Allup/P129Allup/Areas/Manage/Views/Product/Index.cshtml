@model List<Product>


@{
    ViewData["Title"] = "Index";
}



<div class="row mb-3 d-flex justify-content-between">
    <div class="col-lg-2">
        <h1>Products</h1>
    </div>
    <div class="col-lg-1">
        <a class="btn btn-primary" asp-controller="product" asp-action="create" asp-area="manage">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>